# Be sure to restart your server when you modify this file.

# Your secret key is used for verifying the integrity of signed cookies.
# If you change this key, all old signed cookies will become invalid!

# Make sure the secret is at least 30 characters and all random,
# no regular words or you'll be exposed to dictionary attacks.
# You can use `rake secret` to generate a secure secret key.

# Make sure the secrets in this file are kept private
# if you're sharing your code publicly.
development:
  secret_key_base: <%= ENV["SECRET_KEY_BASE"] || '5f29848dc60f2924ac43f13fbf5088b472f16315e6274e78d9abeb9f4d6f964c' %>
  js_url: <%= ENV["JS_URL"] || 'http://localhost:8001/dist/exercises.js' %>
  css_url: <%= ENV["CSS_URL"] || 'http://localhost:8001/dist/exercises.css' %>
  openstax:
    accounts:
      client_id: <%= ENV["OPENSTAX_ACCOUNTS_CLIENT_ID"] %>
      secret: <%= ENV["OPENSTAX_ACCOUNTS_SECRET"] %>
      url: <%= ENV["OPENSTAX_ACCOUNTS_URL"] || 'http://localhost:2999' %>
      stub: <%= ENV["OPENSTAX_ACCOUNTS_STUB"] %>
  exceptions:
    raise: true
    contact_name: 'OpenStax College'
    sender: '"Sender Example" <sender@example.org>'
    recipients: <%= ['recipients@example.org'] %>

test:
  secret_key_base: <%= ENV["SECRET_KEY_BASE"] || '2675b2e6d5b0cdc5474f94715980df111168fbe5ba6e76ddbe345983eaec0000' %>
  js_url: <%= ENV["JS_URL"] || 'http://localhost:8001/dist/exercises.js' %>
  css_url: <%= ENV["CSS_URL"] || 'http://localhost:8001/dist/exercises.css' %>
  openstax:
    accounts:
      client_id: <%= ENV["OPENSTAX_ACCOUNTS_CLIENT_ID"] %>
      secret: <%= ENV["OPENSTAX_ACCOUNTS_SECRET"] %>
      url: <%= ENV["OPENSTAX_ACCOUNTS_URL"] || 'http://localhost:2999' %>
      stub: <%= ENV["OPENSTAX_ACCOUNTS_STUB"] %>
  exceptions:
    raise: true
    contact_name: 'OpenStax College'
    sender: '"Sender Example" <sender@example.org>'
    recipients: <%= ['recipients@example.org'] %>

# Do not keep production secrets in the repository.
production:
  secret_key_base: <%= ENV["SECRET_KEY_BASE"] %>
  js_url: <%= ENV["JS_URL"] || '/assets/exercises.js' %>
  css_url: <%= ENV["CSS_URL"] || '/assets/exercises.css' %>
  exception_recipients: <%= ENV["EXCEPTION_RECIPIENTS"] %>
  mail_site_url: <%= ENV["MAIL_SITE_URL"] %>
  openstax:
    accounts:
      client_id: <%= ENV["OPENSTAX_ACCOUNTS_CLIENT_ID"] %>
      secret: <%= ENV["OPENSTAX_ACCOUNTS_SECRET"] %>
      url: <%= ENV["OPENSTAX_ACCOUNTS_URL"] || 'https://accounts.openstax.org' %>
      stub: <%= ENV["OPENSTAX_ACCOUNTS_STUB"] %>
  exceptions:
    raise: true
    contact_name: 'OpenStax College'
    sender: '"Sender Example" <sender@example.org>'
    recipients: <%= ['recipients@example.org'] %>
  aws:
    s3:
      access_key_id: <%= ENV["AWS_S3_ACCESS_KEY_ID"] %>
      secret_access_key: <%= ENV["AWS_S3_SECRET_ACCESS_KEY"] %>
      region: <%= ENV["AWS_S3_REGION"] %>
      endpoint_server: <%= ENV["AWS_S3_ENDPOINT_SERVER"] %>
      bucket_name: <%= ENV["AWS_S3_BUCKET_NAME"] %>
      asset_host: <%= ENV["AWS_S3_ASSET_HOST"] %>
    ses:
      access_key_id: <%= ENV["AWS_SES_ACCESS_KEY_ID"] %>
      secret_access_key: <%= ENV["AWS_SES_SECRET_ACCESS_KEY"] %>
      endpoint_server: <%= ENV["AWS_SES_ENDPOINT_SERVER"] %>
