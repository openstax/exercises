<%# Clients of this partial must provide the following variables:
    licenses
    action_partial %>

<%= osu.action_list(
    records: licenses,
    list: {
      headings: ['Name', 'Title', 'URL', 'Actions'],
      widths: ['40%', '20%', '30%', '10%'],
      data_procs:
        [
          ->(license) { license.name || '---' },
          ->(license) { license.title || '---' },
          ->(license) { license.url || '---' },
          ->(license) do
            "<span id=license-#{license.id}-actions>#{
              render partial: action_partial, locals: { license: license }
            }</span>".html_safe
          end
        ]
    }
  ) %>
