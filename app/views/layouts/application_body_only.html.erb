<% content_for :application_body do %>

  <div id="application-body-only">

    <div id="application-body-only-global-alerts">
      <%= render  partial: "shared/global_alerts" %>
    </div>

    <div id="application-body-only-body-frame">

      <div id="application-body-only-local-alerts">
        <%= render  partial: "shared/local_alerts" %>
      </div>

      <div id="application-body-only-body-content">
        <% if content_for?(:page_heading) %>
          <%= yield :page_heading %>
        <% end %>

        <%= yield %>
      </div>
    </div>

    <div style="clear:both; margin-bottom: 12px"></div>

  </div>

<% end %>

<%= render template: "layouts/application" %>
