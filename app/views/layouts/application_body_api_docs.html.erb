<% content_for :javascript do %>
  <script type='text/javascript'>
    $(document).on('turbolinks:load', function() {
      $('pre.code, pre.prettyprint').each(function(index) {
        $(this).html(Exercises.Ui.syntaxHighlight($(this).html()));
      });
    });
  </script>
<% end %>

<% content_for :application_body do %>

  <div id="application-body-api-docs">
    <%= yield %>
  </div>

  <div style="clear:both; margin-bottom: 12px"></div>

<% end %>

<%= render template: "layouts/application" %>
