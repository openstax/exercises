<div class="page-header">
  <h1>Your applications</h1>
</div>

<% if current_user.is_administrator? %>
  <p><%= link_to 'New Application', new_oauth_application_url, class: 'btn btn-success' %></p>
<% end %>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Callback URL</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @applications.each do |application| %>
    <tr id="application_<%= application.id %>">
      <td><%= link_to application.name, oauth_application_url(application) %></td>
      <td><%= application.redirect_uri %></td>
      <td><%= link_to 'Edit', edit_oauth_application_url(application), class: 'btn btn-link' %></td>
      <td><%= render 'delete_form', application: application %></td>
    </tr>
  <% end %>
  </tbody>
</table>
